    <script>
      document.querySelector(".btn-primary").addEventListener("click", async () => {
        const report_type = document.getElementById("report_type").value.trim();
        const all = document.querySelector("select[name='all']").value.trim();
        const user = document.getElementById("userSelect").value.trim();
        const manager = document.getElementById("managerSelect").value.trim();
        const firm = document.querySelector("select[name='firm']").value.trim();
        const date_range_from = document.getElementById("date_range_from").value.trim();
        const date_range_to = document.getElementById("date_range_to").value.trim();

        // âœ… Only one among user, manager, or firm should be selected
        const selectedFilters = [all, user, manager, firm].filter(val => val !== "");
        if (selectedFilters.length > 1) {
          renderToast({
            icon: "error",
            message: "Please select only one: User OR Manager OR Firm."
          });
          return false;
        }

        if (selectedFilters.length === 0) {
          renderToast({
            icon: "error",
            message: "Please select at least one: User OR Manager OR Firm."
          });
          return false;
        }

        try {
          const res = await fetch("/admin/sales-report-generate", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({
              report_type,
              user,
              manager,
              firm,
              date_range_from,
              date_range_to,
            }),
          });

          const result = await res.json();
          if (result.success) {
            renderToast({
              icon: "success",
              message: "Report generated successfully",
            });
            location.reload();
          } else {
            renderToast({
              icon: "error",
              message: result.message || "Error generating report",
            });
          }
        } catch (err) {
          console.error(err);
          renderToast({
            icon: "error",
            message: err.message || "Error generating report",
          });
        }
      });
    </script>

    <script>
      $(document).ready(function () {
        $(".downloadReport").on("click", function (e) {
          e.preventDefault();
          const url = $(this).attr("href");
          const btn = $(this);
          btn.text("Generating...");
          fetch(url)
            .then((response) => {
              if (!response.ok) throw new Error("Failed to download report");
              return response.blob();
            })
            .then((blob) => {
              const link = document.createElement("a");
              link.href = window.URL.createObjectURL(blob);
              link.download = "sales_report.pdf";
              window.open(link.href, "_blank");
              document.body.appendChild(link);
              link.click();
              document.body.removeChild(link);
              btn.text("Download");
            })
            .catch((error) => {
              renderToast({
                icon: "error",
                message: error.message || "Error downloading report",
              });
              console.error("Download error:", error);
              btn.text("Download");
            });
        });
      });
    </script>
