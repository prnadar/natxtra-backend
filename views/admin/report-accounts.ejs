    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const generateBtn = document.getElementById("generateReportBtn");

        generateBtn.addEventListener("click", async () => {
          const report_type = document.getElementById("report_type").value;
          const date_range_from = document.getElementById("date_range_from").value;
          const date_range_to = document.getElementById("date_range_to").value;

          if (!date_range_from || !date_range_to) {
            renderToast("error", "Please select a valid date range");
            return;
          }

          try {
            const res = await fetch("/admin/accounts-report-generate", {
              method: "POST",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify({ report_type, date_range_from, date_range_to }),
            });

            const result = await res.json();

            if (result.success) {
              renderToast({
                icon: "success",
                message: "Accounts Report generated successfully",
              });
              location.reload();
            } else {
              renderToast({
                icon: "error",
                message: result.message || "Error generating report",
              });
            }

            // Reload table with filtered data
            const queryParams = new URLSearchParams({
              report_type,
              date_range_from,
              date_range_to,
            });

            const tableRes = await fetch("/admin/report-accounts?" + queryParams.toString());
            const tableHTML = await tableRes.text();

            const parser = new DOMParser();
            const doc = parser.parseFromString(tableHTML, "text/html");
            const newTable = doc.querySelector("#reportTable");
            document.querySelector("#reportTable").innerHTML = newTable.innerHTML;

            attachDownloadHandlers(); // reattach download events
          } catch (err) {
            console.error(err);
            renderToast({
              icon: "error",
              message: error.message || "Error downloading report",
            });
          }
        });

        function attachDownloadHandlers() {
          document.querySelectorAll(".downloadReport").forEach(el => {
            el.addEventListener("click", async function (e) {
              e.preventDefault();
              const url = this.href;
              const originalText = this.textContent;
              this.textContent = "Generating...";
              try {
                const res = await fetch(url);
                if (!res.ok) throw new Error("Failed to download report");
                const blob = await res.blob();
                const link = document.createElement("a");
                link.href = window.URL.createObjectURL(blob);
                link.download = "accounts_report.pdf";
                window.open(link.href, "_blank");
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);
              } catch (err) {
                console.error(err);
                renderToast({
                  icon: "error",
                  message: err.message || "Error downloading report",
                });
              } finally {
                this.textContent = originalText;
              }
            });
          });
        }

        attachDownloadHandlers(); // initial load
      });
    </script>

