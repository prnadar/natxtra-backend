<% 
  // Helper function to check permissions
  const hasPermission = (module, permissionType = 'manage') => {
    // Admins have all permissions
    if (typeof isAdmin !== 'undefined' && isAdmin) return true;
    // Check if user has the module and the specific permission
    return typeof userPermissions !== 'undefined' && userPermissions && userPermissions[module] && userPermissions[module][permissionType];
  };
%>
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>EZ Door || Report HRMS</title>
  <%- include('partials/linkheader.ejs') %>
</head>

<body>
  <div class="page-wrapper">
    <section class="listing-wrapper distributer-wrapper position-relative vh-100">
      <div class="container-fluid px-0 h-100">
        <div class="row mx-0 h-100">
          <div class="col-md-12 px-0">
            <div class="h-100">
              <%- include('partials/sidebar.ejs') %>
                <div class="right-side-block">
                  <%- include('partials/header.ejs') %>

                    <div class="card border-0 bg-transparent">
                      <div class="card-body p-0">
                        <div class="bg-white">
                          <h4 class="p-4 border-bottom">
                            <strong>Custom Report Generator</strong>
                          </h4>
                          <div class="p-4">
                            <form action="addForm">
                              <div class="row">
                                <div class="col-md-2">
                                  <div class="form-group">
                                    <label for="">Report Type</label>
                                    <select name="report_type" id="report_type" class="form-control">
                                      <option value="">Select Report Type</option>
                                      <option value="hrms_leave">
                                        Leave Report
                                      </option>
                                      <option value="hrms_attendance">
                                        Attendance Report
                                      </option>
                                      <option value="hrms_office_calender">
                                        Office Calendar Report
                                      </option>
                                      <option value="hrms_salary">
                                        Salary Report
                                      </option>
                                      <option value="hrms_resignation">
                                        Resignation Report
                                      </option>
                                    </select>
                                  </div>
                                </div>

                                <div class="col-md-3">
                                  <div class="form-group">
                                    <label for="">Individual</label>
                                    <select name="user" class="form-control" id="userSelect">
                                      <option value="">Select User</option>
                                      <% users.forEach(user=> { %>
                                        <option value="<%= user._id %>">
                                          <%= user.name %>
                                        </option>
                                        <% }) %>
                                    </select>
                                  </div>
                                </div>

                                <div class="col-md-3">
                                  <div class="form-group">
                                    <label for="">Manager Wise</label>
                                    <select name="manager" class="form-control" id="managerSelect">
                                      <option value="">Select Manager</option>
                                      <% managers.forEach(manager=> { %>
                                        <option value="<%= manager._id %>">
                                          <%= manager.name %>
                                        </option>
                                        <% }) %>
                                    </select>
                                  </div>
                                </div>

                                <div class="col-md-4">
                                  <div class="form-group">
                                    <label for="date_range_from">Date Range</label>
                                    <div class="d-flex align-items-start">
                                      <input type="date" class="form-control" name="date_range_from"
                                        id="date_range_from" value="<%= today %>" />
                                      <input type="date" class="form-control ms-3" name="date_range_to"
                                        id="date_range_to" value="<%= today %>" />
                                    </div>
                                  </div>
                                </div>

                                <div class="col-md-12 text-end mt-4">
                                  <button type="button" class="btn btn-primary">
                                    Generate Report
                                  </button>
                                </div>

                              </div>
                            </form>
                          </div>
                        </div>
                        <div class="bg-white p-4 mt-4">
                          <h4>HRMS Reports</h4>
                          <div class="distributor-table mt-4">
                            <div class="table-responsive">
                              <table class="table">
                                <thead>
                                  <tr>
                                    <th>Report type</th>
                                    <th>Generated On</th>
                                    <th>User</th>
                                    <th>Manager</th>
                                    <th>Actions</th>
                                  </tr>
                                </thead>
                                <tbody>
                                  <% if (!report[0]) { %>
                                    <tr>
                                      <td colspan="100%">No Data</td>
                                    </tr>
                                    <% } else {%>
                                      <% report.forEach(report=> { %>
                                        <tr>
                                          <td>
                                            <%= report.report_type %>
                                          </td>
                                          <td>
                                            <%= new Date(report.createdAt).toLocaleDateString() %>
                                          </td>
                                          <td>
                                            <%= report.user ? report.user.name : '--' %>
                                          </td>
                                          <td>
                                            <%= report.manager ? report.manager.name : '--' %>
                                          </td>
                                          <td>
                                            <a href="/admin/download-hrms-report/<%= report._id %>"
                                              class="text-info downloadReport">Download</a>
                                          </td>
                                        </tr>
                                        <% });} %>
                                </tbody>
                              </table>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!------listing-wrapper END-------->
  </div>
  <!------Page-wrapper END-------->
  <%- include('partials/linkfooter.ejs') %>
    <script>
      const reportTypeSelect = document.getElementById("report_type");
      const userSelect = document.getElementById("userSelect");
      const managerSelect = document.getElementById("managerSelect");

      document.querySelector(".btn-primary").addEventListener("click", async () => {
        const report_type = reportTypeSelect.value.trim();
        const user = userSelect.value.trim();
        const manager = managerSelect.value.trim();
        const date_range_from = document.getElementById("date_range_from").value.trim();
        const date_range_to = document.getElementById("date_range_to").value.trim();

        if (!report_type || !date_range_from || !date_range_to) {
          renderToast({
            icon: "error",
            message: "Please select report type and date range."
          });
          return false;
        }

        // âœ… Only validate User/Manager selection if NOT Office Calendar
        if (report_type !== "hrms_office_calender") {
          const selectedFilters = [user, manager].filter(val => val !== "");
          if (selectedFilters.length > 1) {
            renderToast({
              icon: "error",
              message: "Please select only one: User OR Manager."
            });
            return false;
          }

          if (selectedFilters.length === 0) {
            renderToast({
              icon: "error",
              message: "Please select at least one: User OR Manager."
            });
            return false;
          }
        }

        try {
          const res = await fetch("/admin/hrms-report-generate", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({
              report_type,
              user: report_type === "hrms_office_calender" ? null : user,
              manager: report_type === "hrms_office_calender" ? null : manager,
              date_range_from,
              date_range_to,
            }),
          });

          const result = await res.json();
          if (result.success) {
            renderToast({
              icon: "success",
              message: "Report generated successfully",
            });
            location.reload();
          } else {
            renderToast({
              icon: "error",
              message: result.message || "Error generating report",
            });
          }
        } catch (err) {
          console.error(err);
          renderToast({
            icon: "error",
            message: err.message || "Error generating report",
          });
        }
      });

      // Optional: hide User/Manager fields when Office Calendar is selected
      reportTypeSelect.addEventListener("change", () => {
        const userDiv = document.getElementById("userSelect").parentElement.parentElement;
        const managerDiv = document.getElementById("managerSelect").parentElement.parentElement;
        if (reportTypeSelect.value === "hrms_office_calender") {
          userDiv.style.display = "none";
          managerDiv.style.display = "none";
        } else {
          userDiv.style.display = "block";
          managerDiv.style.display = "block";
        }
      });
    </script>


    <script>
      $(document).ready(function () {
        $(".downloadReport").on("click", function (e) {
          e.preventDefault();

          const url = $(this).attr("href");

          // Optional: show loading indicator
          $(this).text("Generating...");

          fetch(url)
            .then((response) => {
              if (!response.ok) throw new Error("Failed to download report");
              return response.blob();
            })
            .then((blob) => {
              const link = document.createElement("a");
              link.href = window.URL.createObjectURL(blob);
              link.download = "hrms_report.pdf";
              window.open(link.href, "_blank");
              document.body.appendChild(link);
              link.click();
              document.body.removeChild(link);

              // Optional: reset button text
              $(this).text("Download");
            })
            .catch((error) => {
              renderToast({
                icon: "error",
                message: error.message || "Error downloading report",
              });
              console.error("Download error:", error);
              $(this).text("Download");
            });
        });
      });
    </script>
</body>

</html>