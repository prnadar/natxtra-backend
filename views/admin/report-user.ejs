    <script>
      document
        .querySelector(".btn-primary")
        .addEventListener("click", async () => {
          const report_type = document.getElementById("report_type").value;
          const user = document.getElementById("userSelect").value;
          const date_range_from = document.getElementById("date_range_from").value;
          const date_range_to = document.getElementById("date_range_to").value;

          try {
            const res = await fetch("/admin/user-report-generate", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify({
                report_type,
                user,
                date_range_from,
                date_range_to,
              }),
            });

            const result = await res.json();
            if (result.success) {
              renderToast({
                icon: "success",
                message: "Report generated successfully",
              });
              location.reload();
            } else {
              renderToast({
                icon: "error",
                message: result.message || "Error generating report",
              });
            }
          } catch (err) {
            console.error(err);
            renderToast({
              icon: "error",
              message: err.message || "Error generating report",
            });
          }
        });
    </script>
    <script>
      $(document).ready(function () {
        $(".downloadReport").on("click", function (e) {
          e.preventDefault();

          const url = $(this).attr("href");

          // Optional: show loading indicator
          $(this).text("Generating...");

          fetch(url)
            .then((response) => {
              if (!response.ok) throw new Error("Failed to download report");
              return response.blob();
            })
            .then((blob) => {
              const link = document.createElement("a");
              link.href = window.URL.createObjectURL(blob);
              link.download = "user_report.pdf";
              window.open(link.href, "_blank");
              document.body.appendChild(link);
              link.click();
              document.body.removeChild(link);

              // Optional: reset button text
              $(this).text("Download");
            })
            .catch((error) => {
              renderToast({
                icon: "error",
                message: error.message || "Error downloading report",
              });
              console.error("Download error:", error);
              $(this).text("Download");
            });
        });
      });
