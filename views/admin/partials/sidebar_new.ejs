<% // Helper function to check permissions const hasPermission=(module, permissionType='manage' )=> {
    if (typeof isAdmin !== 'undefined' && isAdmin) return true;
    return typeof userPermissions !== 'undefined' && userPermissions && userPermissions[module] &&
    userPermissions[module][permissionType];
    };
    %>

    <div class="sidebar">
        <!-- Sidebar Header -->
        <div class="sidebar-header">
            <div class="sidebar-logo">
                <i class="fas fa-leaf"></i>
            </div>
            <span class="sidebar-brand">Natxtra</span>
        </div>

        <!-- Sidebar Menu -->
        <nav class="sidebar-menu">
            <!-- Main Section -->
            <div class="menu-section">
                <div class="menu-section-title">Main</div>
                <ul>
                    <% if (hasPermission('Dashboard')) { %>
                        <li class="menu-item">
                            <a href="/admin/dashboard" class="menu-link">
                                <span class="menu-icon"><i class="fas fa-home"></i></span>
                                <span>Dashboard</span>
                            </a>
                        </li>
                        <% } %>
                </ul>
            </div>

            <!-- Inventory Section -->
            <div class="menu-section">
                <div class="menu-section-title">Inventory</div>
                <ul>
                    <% if (hasPermission('Inventory')) { %>
                        <li class="menu-item">
                            <a href="/admin/products-manage" class="menu-link">
                                <span class="menu-icon"><i class="fas fa-box"></i></span>
                                <span>Products</span>
                            </a>
                        </li>
                        <li class="menu-item">
                            <a href="/admin/category-manage" class="menu-link">
                                <span class="menu-icon"><i class="fas fa-tags"></i></span>
                                <span>Categories</span>
                            </a>
                        </li>
                        <li class="menu-item">
                            <a href="/admin/inventory-Dash" class="menu-link">
                                <span class="menu-icon"><i class="fas fa-warehouse"></i></span>
                                <span>Stock Management</span>
                            </a>
                        </li>
                        <% } %>
                </ul>
            </div>

            <!-- Sales Section -->
            <div class="menu-section">
                <div class="menu-section-title">Sales</div>
                <ul>
                    <% if (hasPermission('Sales')) { %>
                        <li class="menu-item">
                            <a href="/admin/sales-dashboard" class="menu-link">
                                <span class="menu-icon"><i class="fas fa-chart-line"></i></span>
                                <span>Sales Dashboard</span>
                            </a>
                        </li>
                        <li class="menu-item">
                            <a href="/admin/oerder-all" class="menu-link">
                                <span class="menu-icon"><i class="fas fa-shopping-cart"></i></span>
                                <span>Orders</span>
                                <span class="menu-badge">12</span>
                            </a>
                        </li>
                        <li class="menu-item">
                            <a href="/admin/lead-listing" class="menu-link">
                                <span class="menu-icon"><i class="fas fa-users"></i></span>
                                <span>Leads</span>
                            </a>
                        </li>
                        <% } %>
                </ul>
            </div>

            <!-- HRMS Section -->
            <div class="menu-section">
                <div class="menu-section-title">Team</div>
                <ul>
                    <% if (hasPermission('HRMS')) { %>
                        <li class="menu-item">
                            <a href="/admin/hrms-dashboard" class="menu-link">
                                <span class="menu-icon"><i class="fas fa-user-tie"></i></span>
                                <span>HRMS</span>
                            </a>
                        </li>
                        <li class="menu-item">
                            <a href="/admin/attendance" class="menu-link">
                                <span class="menu-icon"><i class="fas fa-calendar-check"></i></span>
                                <span>Attendance</span>
                            </a>
                        </li>
                        <% } %>
                </ul>
            </div>

            <!-- Reports Section -->
            <div class="menu-section">
                <div class="menu-section-title">Analytics</div>
                <ul>
                    <% if (hasPermission('Reports')) { %>
                        <li class="menu-item">
                            <a href="/admin/reports-dashboard" class="menu-link">
                                <span class="menu-icon"><i class="fas fa-chart-bar"></i></span>
                                <span>Reports</span>
                            </a>
                        </li>
                        <li class="menu-item">
                            <a href="/admin/analytics" class="menu-link">
                                <span class="menu-icon"><i class="fas fa-chart-pie"></i></span>
                                <span>Analytics</span>
                            </a>
                        </li>
                        <% } %>
                </ul>
            </div>

            <!-- Settings Section -->
            <div class="menu-section">
                <div class="menu-section-title">System</div>
                <ul>
                    <% if (hasPermission('Settings')) { %>
                        <li class="menu-item">
                            <a href="/admin/settings" class="menu-link">
                                <span class="menu-icon"><i class="fas fa-cog"></i></span>
                                <span>Settings</span>
                            </a>
                        </li>
                        <li class="menu-item">
                            <a href="/admin/users" class="menu-link">
                                <span class="menu-icon"><i class="fas fa-user-shield"></i></span>
                                <span>User Management</span>
                            </a>
                        </li>
                        <% } %>
                </ul>
            </div>
        </nav>
    </div>

    <script>
        // Active link highlighting
        document.addEventListener('DOMContentLoaded', function () {
            const currentPath = window.location.pathname;
            const menuLinks = document.querySelectorAll('.menu-link');

            menuLinks.forEach(link => {
                if (link.getAttribute('href') === currentPath || currentPath.includes(link.getAttribute('href'))) {
                    link.classList.add('active');
                }
            });
        });
    </script>