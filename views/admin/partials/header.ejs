<div class="topbar">
  <div class="topbar-left">
    <button class="icon-btn" id="sidebarToggle">
      <i class="fas fa-bars"></i>
    </button>
    <h1 class="page-title">
      <%= typeof pageTitle !=='undefined' ? pageTitle : 'Dashboard' %>
    </h1>
  </div>

  <div class="topbar-right">
    <!-- Search -->
    <div class="search-box">
      <i class="fas fa-search search-icon"></i>
      <input type="text" class="search-input" placeholder="Search products, orders, customers..." />
    </div>

    <!-- Actions -->
    <div class="topbar-actions">
      <!-- Notifications -->
      <button class="icon-btn" id="notificationsBtn">
        <i class="fas fa-bell"></i>
        <span class="icon-btn-badge">3</span>
      </button>

      <!-- Messages -->
      <button class="icon-btn" id="messagesBtn">
        <i class="fas fa-envelope"></i>
        <span class="icon-btn-badge">5</span>
      </button>

      <!-- User Menu -->
      <div class="user-menu" id="userMenuBtn">
        <div class="user-avatar">
          <%= typeof userName !=='undefined' ? userName.charAt(0).toUpperCase() : 'A' %>
        </div>
        <div class="user-info">
          <div class="user-name">
            <%= typeof userName !=='undefined' ? userName : 'Admin' %>
          </div>
          <div class="user-role">
            <%= typeof userRole !=='undefined' ? userRole : 'Administrator' %>
          </div>
        </div>
        <i class="fas fa-chevron-down" style="color: var(--text-muted); font-size: 0.75rem;"></i>
      </div>
    </div>
  </div>
</div>

<script>
  // Sidebar toggle
  document.getElementById('sidebarToggle')?.addEventListener('click', function () {
    document.querySelector('.sidebar')?.classList.toggle('open');
  });

  // User menu dropdown (placeholder)
  document.getElementById('userMenuBtn')?.addEventListener('click', function () {
    // Add dropdown logic here
    console.log('User menu clicked');
  });
</script>