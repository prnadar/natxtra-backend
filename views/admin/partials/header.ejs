<script>
  function logout() {
    if (confirm("Do you really want to logout")) {
      // DO POST
      $.ajax({
        type: "POST",
        contentType: "application/json",
        url: "/admin/logout",
      }).done((res) => {
        if (res == "success") {
          window.location.href = "/admin/login";
        } else {
          alert(res);
        }
      });
    }
  }
</script>
