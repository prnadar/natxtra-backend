<% 
  // Helper function to check permissions
  const hasPermission = (module, permissionType = 'manage') => {
    // Admins have all permissions
    if (typeof isAdmin !== 'undefined' && isAdmin) return true;
    // Check if user has the module and the specific permission
    return typeof userPermissions !== 'undefined' && userPermissions && userPermissions[module] && userPermissions[module][permissionType];
  };
%>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EZ Door || PRODUCTS STOCK LIST</title>
    <%- include('partials/linkheader.ejs') %>
  </head>

  <body>
    <div class="page-wrapper">
      <!------Header END-------->

      <section
        class="listing-wrapper distributer-wrapper position-relative vh-100"
      >
        <div class="container-fluid px-0 h-100">
          <div class="row mx-0 h-100">
            <div class="col-md-12 px-0">
              <div class="h-100">
                <%- include('partials/sidebar.ejs') %>
                <div class="right-side-block">
                  <%- include('partials/header.ejs') %>

                  <div class="card border-0 bg-transparent">
                    <div class="card-body p-0">
                      <div class="bg-white">
                        <div
                          class="d-flex p-4 border-bottom align-items-center justify-content-between"
                        >
                          <h4>Products Management Stock List</h4>
                        </div>

                        <div class="bg-white distributor-table">
                          <div class="table-responsive">
                            <table class="table">
                              <thead>
                                <tr>
                                  <th>Name</th>
                                  <th>Size</th>
                                  <!-- <th>Product Code</th> -->
                                  <th>Thikness</th>
                                  <th>Door Code</th>
                                  <th>SKU</th>
                                  <th>Current Quantity</th>
                                  <% if (hasPermission('Inventory', 'edit')) {
                                  %>
                                  <th>Action</th>
                                  <% } %>
                                </tr>
                              </thead>
                              <tbody>
                                <% if (!products[0]) { %>
                                <tr>
                                  <td colspan="100%">No Data</td>
                                </tr>
                                <% } else {%> <%
                                products.forEach(function(product,index){%>
                                <tr>
                                  <td><%= product.door_name %></td>
                                  <td><%= product.size %></td>
                                  <td><%= product.thickness %></td>
                                    <td><%= product.door_code %></td>
                                  <td><%= product.sku %></td>
                                  <td><%= product.quantity %></td>
                                  <% if (hasPermission('Inventory', 'edit')) {
                                  %>
                                  <td>
                                    <a
                                      href="#"
                                      class="bg-info"
                                      data-bs-toggle="modal"
                                      data-bs-target="#stockupdateModal"
                                      data-model="<%= JSON.stringify(product) %>"
                                      id="edit_btn"
                                    >
                                      <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                  </td>
                                  <% } %>
                                </tr>
                                <% });} %>
                              </tbody>
                            </table>
                          </div>
                        </div>

                       <div class="d-flex align-items-center justify-content-between">
  <p>
    Showing
    <%= Math.min(currentPage * pageSize, totalItems) %>
    of
    <%= totalItems %>
    entries
  </p>

  <nav aria-label="Page navigation">
    <ul class="pagination mb-0">

      <!-- Previous Button -->
      <li class="page-item <%= currentPage <= 1 ? 'disabled' : '' %>">
        <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
      </li>

      <% 
        let startPage = Math.max(1, currentPage - 1);
        let endPage = Math.min(totalPages, startPage + 2);

        // Adjust startPage if we're near the end
        if (endPage - startPage < 2) {
          startPage = Math.max(1, endPage - 2);
        }
      %>

      <% for (let i = startPage; i <= endPage; i++) { %>
        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
          <a class="page-link" href="?page=<%= i %>"><%= i %></a>
        </li>
      <% } %>

      <!-- Next Button -->
      <li class="page-item <%= currentPage >= totalPages ? 'disabled' : '' %>">
        <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
      </li>
    </ul>
  </nav>
</div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <!------listing-wrapper END-------->
    </div>
    <!------Page-wrapper END-------->
    <%- include('partials/linkfooter.ejs') %>

    <!-- Modal -->
    <div
      class="modal fade"
      id="stockupdateModal"
      tabindex="-1"
      aria-labelledby="stockupdateModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="stockupdateModalLabel">
              Update Quantity
            </h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body p-4">
            <form id="editform">
              <div class="row">
                <input type="text" name="editid" hidden id="editid" />
                <div class="col-md-6">
                  <div class="quantity-block">
                    <h6>Product</h6>
                    <input
                      type="text"
                      id="edit_product_name"
                      class="form-control"
                      disabled
                    />
                    <!-- <div class="form-check mt-3">
                      <input
                        class="form-check-input"
                        type="radio"
                        name="flexRadioDefault"
                        id="flexRadioDefault4"
                        checked
                      />
                      <label class="form-check-label" for="flexRadioDefault4">
                        Add Quantity
                      </label>
                    </div> -->
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="quantity-block">
                    <h6>SKU</h6>
                    <input
                      type="text"
                      id="edit_sku"
                      class="form-control"
                      disabled
                    />
                    <!-- <div class="form-check mt-3">
                      <input
                        class="form-check-input"
                        type="radio"
                        name="flexRadioDefault"
                        id="flexRadioDefault5"
                      />
                      <label class="form-check-label" for="flexRadioDefault5">
                        Less Quantity
                      </label>
                    </div> -->
                  </div>
                </div>

                <div class="col-md-12 mt-4">
                  <div class="form-group">
                    <label for=""
                      >Quantity<span class="text-danger">*</span></label
                    >
                    <input
                      type="text"
                      name="edit_quantity"
                      id="edit_quantity"
                      class="form-control"
                    />
                  </div>
                </div>
              </div>

              <div class="text-end mt-4">
                <button
                  type="button"
                  class="btn btn-default bg-white border-0"
                  data-bs-dismiss="modal"
                >
                  Close
                </button>
                <button
                  type="submit"
                  id="edit-btn"
                  class="btn btn-primary ms-3"
                >
                  Update
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <script>
      //#region starts Edit Category
      $(document).on("click", "#edit_btn", function (e) {
        var data = $(this).attr("data-model");
        data = JSON.parse(data);

        $("#editid").val(data._id);
        $("#edit_product_name").val(data.product_name);
        $("#edit_sku").val(data.sku);
        $("#edit_quantity").val(data.quantity);
      });

      var editform = $("#editform");
      editform.on("submit", editSubmitHandler);

      function editSubmitHandler(e) {
        e.preventDefault();
        // Prepare form data
        var formData = getFormData(editform);

        // Perform AJAX request
        $.ajax({
          type: "POST",
          processData: false,
          contentType: "application/json",
          url: "/admin/update-quantity",
          data: JSON.stringify(formData),
          success: (res) => {
            renderToast({
              message: `Quantity updated for ${$("#edit_product_name").val()}`,
              icon: "success",
            });

            setTimeout(() => {
              window.location.reload();
            }, 1000);
          },
          error: (res) => {
            renderToast({
              message: res.message,
              icon: "error",
            });
            console.log(res);
          },
        });
      }

      //#endregion Edit Product
    </script>
  </body>
</html>
