  </div>
  <!------Page-wrapper END-------->
  <%- include('partials/linkfooter.ejs') %>

    <script>
      // Generate Distributor Report
      document.getElementById("generateBtn")?.addEventListener("click", async () => {
        const report_type = document.getElementById("report_type").value.trim();
        const date_range_from = document.getElementById("date_range_from").value.trim();
        const date_range_to = document.getElementById("date_range_to").value.trim();
        const distributor = document.getElementById("distributorSelect").value.trim();
        const state = document.getElementById("state").value.trim();
        const zone = document.getElementById("zoneSelect").value.trim();
        const distributor_type = document.getElementById("distributor_type").value.trim();

        // Check filters
        const filters = [distributor, state, zone, distributor_type].filter(v => v !== "");
        if (filters.length > 1) {
          renderToast({
            icon: "warning",
            message: "Please select only one filter (Distributor, State, Zone, or Distributor Type)"
          });
          return false;
        }
        if (filters.length === 0) {
          renderToast({
            icon: "warning",
            message: "Please select at least one filter"
          });
          return false;
        }

        try {
          const res = await fetch("/admin/distributor-report-generate", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({
              report_type,
              date_range_from,
              date_range_to,
              distributor,
              state,
              zone,
              distributor_type
            }),
          });

          const result = await res.json();
          if (result.success) {
            renderToast({
              icon: "success",
              message: "Distributor Report generated successfully",
            });
            location.reload();
          } else {
            renderToast({
              icon: "error",
              message: result.message || "Error generating report",
            });
          }
        } catch (err) {
          console.error(err);
          renderToast({
            icon: "error",
            message: err.message || "Error generating report",
          });
        }
      });

      // Download Distributor Report
      $(document).ready(function () {
        $(".downloadReport").on("click", function (e) {
          e.preventDefault();
          const url = $(this).attr("href");
          const btn = $(this);

          btn.text("Generating...");
          fetch(url)
            .then((response) => {
              if (!response.ok) throw new Error("Failed to download report");
              return response.blob();
            })
            .then((blob) => {
              const link = document.createElement("a");
              link.href = window.URL.createObjectURL(blob);
              link.download = "distributor_report.pdf";
              window.open(link.href, "_blank");
              document.body.appendChild(link);
              link.click();
              document.body.removeChild(link);
              btn.text("Download");
            })
            .catch((error) => {
              renderToast({
                icon: "error",
                message: error.message || "Error downloading report",
              });
              btn.text("Download");
            });
        });
      });
    </script>


</body>

</html>